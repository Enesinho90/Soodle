{% extends 'base.html.twig' %}

{% block title %}Soodle | Mon profil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/profil.css') }}">
{% endblock %}
{% block body %}
    {% include 'partials/navbar.html.twig' %}
    <div class="title">
        <h1> Mon Profil</h1>
    </div>
    <div class="container-profil">
        <div class="left-profil">

                <img src="{{ asset('uploads/avatar/' ~ user.avatar) }}" class="profil-avatar">
            <br>
        </div>
        <div class="right-profil">
            <p>Nom : <span class="green"> {{ user.nom }}</span></p>
            <p>Prénom : <span class="green"> {{ user.prenom }}</span></p>
            <p>Adresse mail : <span class="green"> {{ user.email }}</span></p>
            <p>Rôle :
                <span class="green">
        {% for role in app.user.roles %}
            {% if role == 'ROLE_ADMIN' %}
                Administrateur
            {% elseif role == 'ROLE_PROF' %}
                Professeur
            {% elseif role == 'ROLE_ETUDIANT' %}
                Étudiant
            {% endif %}
        {% endfor %}
    </span>
            </p>

            <div>
            </div>
            <div class="buttons">
                <a href="{{ path('app_modification_profil') }}" target="_blank"><button><i class="fa-solid fa-gear"></i> Modifier mon profil</button></a>
                <a href="{{ path('app_changer_mdp') }}" target="_blank"><button><i class="fa-solid fa-key"></i> Changer de mot de passe</button></a>
            </div>
        </div>
    </div>
{% endblock %}
