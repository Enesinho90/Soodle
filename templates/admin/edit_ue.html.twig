{% extends 'base.html.twig' %}

{% block title %}Soodle | Modifier une UE{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/createUE.css') }}">
{% endblock %}
{% block body %}
    {{ form_start(UEForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
    <div class="title">
        <h1>Formulaire de modification d'unité d'enseignement</h1>
    </div>

    <div class="form-input">
        <div>{{ form_label(UEForm.code, 'Code :') }}</div>
        {{ form_widget(UEForm.code, {'attr': {'id': 'code'}}) }}
        {{ form_errors(UEForm.code) }}
    </div>
    <br>

    <div class="form-input">
        <div>{{ form_label(UEForm.intitule, 'Intitulé :') }}</div>
        {{ form_widget(UEForm.intitule, {'attr': {'id': 'intitule'}}) }}
        {{ form_errors(UEForm.intitule) }}
    </div>
    <br>

    <div class="form-input">
        <div>{{ form_label(UEForm.image, 'Image :') }}</div>
        {{ form_widget(UEForm.image, {'attr': {'id': 'mail'}}) }}
        {{ form_errors(UEForm.image) }}
    </div>


    <br>

    <button type="submit" class="btn">Modifier</button>

    {{ form_end(UEForm) }}
    }}
{% endblock %}